{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "allowJs": true,
    "module": "CommonJS",
    "outDir": "dir",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "removeComments": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["node", "jest", "ts-jest"]
  },
  "include": ["**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
