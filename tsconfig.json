{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "removeComments": true,
    "typeRoots": ["../node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
