{
  "compilerOptions": {
    "incremental": true,                            
    "target": "es2022",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "removeComments" : true ,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]},
    "include": [
      "**/*.ts",
      "*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
